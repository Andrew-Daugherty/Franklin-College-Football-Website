@page
@model FCFootball.Pages.PlayerStats.MaintainPlayerStatsModel
@{
    var isLoggedIn = ViewContext.HttpContext.Session.GetString("LoggedIn") == "true";
}

<h1>Player Statistics</h1>

@if (isLoggedIn)
{
<label>Message:</label>
<label style="color: @Model.MessageColor">@Model.Message</label>
}

<br />

<table class="table">
    <thead>
        <tr>
            @if (isLoggedIn)
            {
                <td><a asp-page="AddPlayerStat" class="btn btn-maintain btn-add">Add</a></td>
            }
            <th><label>No.</label></th>
            <th><label>Player</label></th>
            <th><label>Opponent</label></th>
            <th><label>PassAtt</label></th>
            <th><label>PassComp</label></th>
            <th><label>PassYds</label></th>
            <th><label>PassTd</label></th>
            <th><label>RushAtt</label></th>
            <th><label>RushYds</label></th>
            <th><label>RushTd</label></th>
            <th><label>RecYds</label></th>
            <th><label>RecTd</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ResultIList)
        {
            <tr>
                @if (isLoggedIn)
                {
                    <td>
                        <a asp-page="ModifyPlayerStat" asp-route-intPlayerStatID="@item.PlayerStatID" class="btn btn-maintain btn-modify">Modify</a>
                        <a asp-page="DeletePlayerStat" asp-route-intPlayerStatID="@item.PlayerStatID" class="btn btn-maintain btn-delete" onclick="return confirm('Are you sure you want to delete this item? Click OK to delete it. Click Cancel to keep it.')">Delete</a>
                    </td>
                }

                <td><label>#@item.Number</label></td>
                <td>
                    <img src="~/images/@item.Image" class="player-image" alt="Player Image" />
                    <label>@item.FirstName @item.LastName</label>
                </td>
                <td><label>@item.Opponent</label></td>
                <td><label>@item.PassAtt</label></td>
                <td><label>@item.PassComp</label></td>
                <td><label>@item.PassYds</label></td>
                <td><label>@item.PassTd</label></td>
                <td><label>@item.RushAtt</label></td>
                <td><label>@item.RushYds</label></td>
                <td><label>@item.RushTd</label></td>
                <td><label>@item.RecYds</label></td>
                <td><label>@item.RecTd</label></td>
            </tr>
        }
    </tbody>
</table>