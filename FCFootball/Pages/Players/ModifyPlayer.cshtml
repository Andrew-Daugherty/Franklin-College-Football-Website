@page
@model FCFootball.Pages.Players.ModifyPlayerModel
@{
}

<h1>Modify Player</h1>

<label>Message:</label>
<label style="color: @Model.MessageColor">@Model.Message</label>

<br />
<br />

<form method="post" enctype="multipart/form-data">

	<input asp-for="Player.PlayerID" type="hidden" />
	<input asp-for="OldPlayerImage" type="hidden" />

	<table>

		<tr>
			<td><label asp-for="Player.FirstName">First Name:</label></td>
			<td><input asp-for="Player.FirstName" class="form-control" /></td>
		</tr>

		<tr>
			<td><label asp-for="Player.LastName">Last Name:</label></td>
			<td><input asp-for="Player.LastName" class="form-control" /></td>
		</tr>

		<tr>
			<td><label asp-for="Player.Height">Height:</label></td>
			<td><input asp-for="Player.Height" class="form-control" /></td>
		</tr>

		<tr>
			<td><label asp-for="Player.Weight">Weight:</label></td>
			<td><input asp-for="Player.Weight" class="form-control" /></td>
		</tr>

		<tr>
			<td><label asp-for="Player.Position">Position:</label></td>
			<td><input asp-for="Player.Position" class="form-control" /></td>
		</tr>

		<tr>
			<td><label asp-for="Player.Number">Jersey Number:</label></td>
			<td><input asp-for="Player.Number" class="form-control" /></td>
		</tr>

		<tr>
			<td><label asp-for="PlayerImage">Image:</label></td>
			<td><input asp-for="PlayerImage" type="file" class="form-control" /></td>
		</tr>

		<tr>
			<td></td>
			<td>
				<input asp-page-handler="Modify" type="submit" class="btn btn-submit form-control w-100" value="Modify Player" />
				<a asp-page="CancelPlayer">Cancel</a>
			</td>
		</tr>

	</table>

</form>